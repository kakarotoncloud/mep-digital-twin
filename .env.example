# ===========================================
# MEP Digital Twin - Environment Configuration
# ===========================================
# Copy this file to .env and adjust values as needed
# cp .env.example .env

# -------------------------------------------
# Database Configuration (TimescaleDB)
# -------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mep_digital_twin
DATABASE_URL=postgresql://postgres:postgres@timescaledb:5432/mep_digital_twin

# -------------------------------------------
# API Configuration (FastAPI)
# -------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=INFO

# -------------------------------------------
# Physics Validation Settings
# -------------------------------------------
# If true, warnings are treated as errors (strict mode)
PHYSICS_STRICT_MODE=false

# -------------------------------------------
# Streamlit Configuration
# -------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# -------------------------------------------
# Application Settings
# -------------------------------------------
# Default asset ID for demo
DEFAULT_ASSET_ID=CH-001

# Data retention in days (for TimescaleDB)
DATA_RETENTION_DAYS=90
